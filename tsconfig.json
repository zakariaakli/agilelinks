{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ], // Keep this as is
    "resolveJsonModule": true,
    "module": "esnext",
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "next-env.d.ts",
    "pages/**/*",
    ".next/types/**/*.ts"
, "src/layout.tsx", "src/page.tsx"  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
